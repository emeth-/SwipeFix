<div class="container-fluid main-container">
    <div class="row">
        <div class="col-xs-12">
            <h4 class="section-header">
                <span>Bad data, swipe to fix!</span>
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{#each fix_me_data.expected_close_date_past}}
                {{partial 'tmp/oppContainer.hbs'}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{#each fix_me_data.no_contacts_assigned}}
                {{partial 'tmp/oppContainer.hbs'}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{#each fix_me_data.open_task_due_in_past}}
                {{partial 'tmp/oppContainer.hbs'}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{#each fix_me_data.assigned_to_invalid_stage}}
                {{partial 'tmp/oppContainer.hbs'}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{#each fix_me_data.close_date_not_realistic_based_off_current_stage}}
                {{partial 'tmp/oppContainer.hbs'}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h4 class="section-header">
                <span>What's Coming Up?</span>
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{#each upcoming_data}}
                <ul class="list-group">
                    {{#isEqual thing 'task'}}
                    <li class="list-group-item opp-profile-opener" data-id="{{data.id}}">
                        <h5 style="color: #777;" class="upcoming-title">
                            Task due
                            <span class="glyphicon glyphicon-check"></span>
                        </h5>
                        <p><strong>{{data.subject}}</strong></p>
                        <p class="small" style="color: #999;">Due: {{data.due_date}}</p>
                    {{else}}
                        {{#isEqual thing 'opportunity'}}
                        <li class="list-group-item opp-profile-opener" data-id="{{data.id}}">
                            <h5 style="color: #777;" class="upcoming-title">
                                Opportunity closing
                                <span class="glyphicon glyphicon-usd"></span>
                            </h5>
                            <p><strong>{{data.name}}</strong></p>
                            <p class="small" style="color: #999;">Close Date: {{data.expected_close_date}}</p>
                        {{/isEqual}}
                    {{/isEqual}}
                </li>
                </ul>
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <h4 class="section-header">
                <span>Opps that needs love!</span>
            </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            {{#each last_update_data}}
                <ul class="list-group">
                    <li class="list-group-item opp-profile-opener" data-id="{{id}}">
                        <h5 style="color: #777;" class="upcoming-title">
                            Opportunity closing
                            <span class="glyphicon glyphicon-usd"></span>
                        </h5>
                        <p><strong>{{name}}</strong></p>
                        <p class="small" style="color: #999;">Last Updated: {{expected_close_date}}</p>
                        <p class="small" style="color: #999;">Close Date: {{expected_close_date}}</p>
                    </li>
                </ul>
            {{/each}}
        </div>
    </div>
</div>
